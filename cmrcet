int main()
{
	int choice;
	printf("1.UPPER \n 2.LOWER \n 3.NUMBERS \n4.SYMBOLS\nEnter your choice");
	scanf("%d",&choice);
	switch(choice)
	{
		case 1:
			{
				int up=65;
				printf("upper case: ");
				while(up<=90)
				{
					printf("%c ",up++);
				}
				break;
			}
		case 2:
			{
				int lw=97;
				printf("lower values: ");
				while(lw<=122)
				{
					printf("%c ",lw++);
				}
				break;
			}
		case 3:
			{
				int num=48;
				printf("numbers: ");
				while(num<=57)
					printf("%c ",(char)num++);
				break;
			}
		case 4:
			{
				int sym=0;
				printf("symbols: "); 
				while(sym<=255)
				{
					if((sym>=65&&sym<=90)||(sym>=97&&sym<=122)||(sym>=48&&sym<=57))
						continue;
					else
						printf("%c ",sym);
					sym++;
				}
			}
	}
	
}
