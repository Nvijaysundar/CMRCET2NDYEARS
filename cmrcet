int main()
{
	int choice;
	scanf("%d",&choice);
	switch(choice)
	{
		case 1:{
			char ini,fin;
			scanf("%c%c",&ini,&fin);
			if(ini>='A' && ini <='Z' && fin>='A && fin<='Z')
			{
				if((int) ini<(int)fin)
				{
					while(ini<=fin)
					{
						printf("%c ",ini++);
					}
				}
				else
				{
					while(ini>=fin)
					{
						printf("%c ",ini--);
					}
				}
			}
			else
			{
				printf("invalid inputs");
			}
			break;
			}
	}
}










































	
