#include<stdio.h>
int main()
{
	printf("====welcome to CMR====");
	while(1)
	{
		printf("Departments conducting Events");
	printf("1.CSE\n 2.ECE \n 3.Mech\n 4.EEE \n 5.IT\n Enter the dept");
	int choice;
	char event;
	scanf("%d",&choice);
	switch(choice)
	{
		case 1:
			{
				printf("Welcome to CSE");
				printf("Event :\nA.CC \n B.Hackathon");
				scanf("%c",&event);
				switch(event)
				{
					case 'A':
						{
							printf("Venue-> A121");
							break;
						}
					case 'B':
						{
							printf("Venue-> A122");
