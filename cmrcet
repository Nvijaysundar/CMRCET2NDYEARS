int main()
{
	char ch;
	scanf("%c",&ch);
	if((int)ch>=65 && (int)ch<=90)
	{
		printf("Upper case");
	}
	else if((int)ch >=97 && (int) ch<=122)
	{
		printf("Lower case");
	}
	else if((int)ch=>48 && (int)ch<=57)
	{
		printf("Numbers");
	}
	else
	{
		printf("symbols");
	}
}

