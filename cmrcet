int main()
{
	int dir,sum=0;
	while(1)
	{
		scanf("%d",&dir);
		
		if (dir ==1 || dir ==-1)
			sum+=dir;
		else if(dir ==0)
			break;
		else
		{
			printf("Invalid input");
			break;
		}
	}
	if(dir==0)
	{
		int res= sum%4;
		switch(res)
			{
			case 0:	printf("East");
					break;
			case 1:
			case -3: printf("North")
					break;
			case 2:
			case -2:printf("west");
					break;
			case 3:
			case -1: printf("south");
					break;
			}
	}	
}
