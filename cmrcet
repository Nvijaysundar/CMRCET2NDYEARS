#include<stdio.h>
int balance=10000;
int main()
{
	int pin,choice,amount,pinchances=3;
	while(pinchances--)
	{
	printf("enter 4 digit pin no: ");
	scanf("%d",&pin);
	if(pin == 1111 || pin == 2222 ||pin ==3333)
	{
			printf("pin verified");
			while(1)
			{
			printf("\nselect \n1.Deposit \n2.Withdraw\n3.exit");
			printf("\nenter choice: ");
			scanf("%d",&choice);
			switch(choice)
			{
			case 1:
				{
					printf("enter the money to deposit in multiple of 100: ");
					scanf("%d",&amount);
					if(amount%100==0 && amount>0)
					{
						balance+=amount;
						printf("balance : %d",balance);
					}
					else
					{
						printf("invalid amount");
					}
					break;
				}
			case 2:
			{
				printf("enter the money to withdraw in multiple of 100: ");
				scanf("%d",&amount);
				if(amount%100==0 && amount>0 && amount<=balance)
				{
					balance-=amount;
					printf("balance : %d",balance);
				}
				else
				{
					printf("invalid amount");
				}
				break;	
			}
			default:
			{
			    if(choice!=3)
				printf("Invalid choice");
			}
			}
			
			if(choice==3)
			    break;
			}
	}
	else
	{
	printf("wrong pin, Reach nearest branch to change pin\n");
	printf("left over chances : %d\n",pinchances);
	}
	if (choice==3)
	        break;

	}
	return 0;
}
